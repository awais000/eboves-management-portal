

pipeline {
  agent any
  stages {
    stage('Prepare Workspace') {
      steps {
        sh 'yarn'
      }
    }

    stage('build') {
      steps {
        sh 'yarn build'
      }
    }

    stage('deploy') {
      when {
        expression {
          BRANCH_NAME == 'dev'
        }

      }
      steps {
        echo 'deploying'
        sh '''ssh cdjenkins@172.104.186.220 \'
            rm -rf /var/www/StagingServer/BackOffice/*
            \'

            rsync -avz -e ssh dist/ cdjenkins@172.104.186.220:/var/www/StagingServer/BackOffice
            '''
      }
    }

  }
}